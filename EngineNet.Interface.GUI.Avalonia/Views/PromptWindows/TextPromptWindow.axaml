<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RemakeEngine.Interface.GUI.Avalonia.Views.PromptWindows.TextPromptWindow"
        Width="420" Height="140"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
  <DockPanel Margin="8">
    <TextBox x:Name="Input" DockPanel.Dock="Top"/>
    <Button Content="OK" HorizontalAlignment="Right" Width="80" Margin="0,8,0,0" Click="OnOk"/>
  </DockPanel>
</Window>
