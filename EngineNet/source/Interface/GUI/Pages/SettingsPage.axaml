<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="EngineNet.Interface.GUI.Pages.SettingsPage">

    <StackPanel Spacing="10" Margin="8">
        <TextBlock Text="Settings" FontSize="20" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Project Root:" VerticalAlignment="Center"/>
            <TextBlock Width="420" Text="{Binding ProjectRoot}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Project Status:" VerticalAlignment="Center"/>
            <TextBlock Width="420" Text="{Binding Status}" />
        </StackPanel>

    </StackPanel>

</UserControl>
