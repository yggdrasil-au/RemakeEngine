<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="EngineNet.Interface.GUI.Pages.SettingsPage">

    <StackPanel Spacing="10" Margin="8">
        <TextBlock Text="Settings" FontSize="20" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Project Root:" VerticalAlignment="Center"/>
            <TextBox Width="420" Text="{Binding ProjectRoot}" />
            <Button Content="Browse" Command="{Binding Button_BrowseRoot_Click}"/>
            <Button Content="Save" Command="{Binding Button_Save_Click}"/>
        </StackPanel>

        <TextBlock Text="{Binding Status}" />

    </StackPanel>

</UserControl>
