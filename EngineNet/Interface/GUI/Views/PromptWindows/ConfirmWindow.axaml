<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EngineNet.Interface.GUI.Avalonia.Views.PromptWindows.ConfirmWindow"
        Width="360" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
  <DockPanel Margin="8">
    <TextBlock x:Name="Question" DockPanel.Dock="Top" TextWrapping="Wrap"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Content="Yes" Width="80" Margin="0,0,8,0" Click="OnYes"/>
      <Button Content="No" Width="80" Click="OnNo"/>
    </StackPanel>
  </DockPanel>
</Window>
